    <script>
        // Get current domain and update all domain references
        function updateDomainReferences() {
            const currentDomain = window.location.hostname.replace('www.', '');
            const domainElements = [
                'header-logo', 'footer-logo', 'copyright-domain'
            ];
            
            domainElements.forEach(id => {
                const element = document.getElementById(id);
                if (element) {
                    element.textContent = currentDomain || 'LearnForAll';
                }
            });
        }

        // Toggle dropdown menu
        function toggleDropdown() {
            const dropdown = document.querySelector('.dropdown');
            dropdown.classList.toggle('active');
        }

        // Toggle mobile menu
        function toggleMobileMenu() {
            const mobileMenu = document.querySelector('.mobile-menu');
            mobileMenu.classList.toggle('active');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.querySelector('.dropdown');
            const toolsButton = event.target.closest('button');
            
            if (!toolsButton || !toolsButton.textContent.includes('Tools')) {
                dropdown.classList.remove('active');
            }
        });

        // Character counter for input
        document.getElementById('videoInput').addEventListener('input', function() {
            const charCount = this.value.length;
            document.getElementById('charCount').textContent = charCount;
        });

        // YouTube Tags Generation Logic
        function generateTags() {
            const input = document.getElementById('videoInput').value.trim();
            
            if (!input) {
                alert('Please enter a video title or keyword to generate tags.');
                return;
            }

            // Show loading state
            document.getElementById('loadingState').classList.remove('hidden');
            document.getElementById('resultsSection').classList.add('hidden');
            
            // Disable generate button
            const generateBtn = document.getElementById('generateBtn');
            generateBtn.disabled = true;
            generateBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Generating...';

            // Simulate API call delay
            setTimeout(() => {
                const tags = generateTagsFromInput(input);
                displayResults(tags);
                
                // Re-enable generate button
                generateBtn.disabled = false;
                generateBtn.innerHTML = '<i class="fas fa-magic mr-2"></i>Generate Tags';
                
                // Hide loading state and show results
                document.getElementById('loadingState').classList.add('hidden');
                document.getElementById('resultsSection').classList.remove('hidden');
            }, 2000);
        }

        function generateTagsFromInput(input) {
            const words = input.toLowerCase().split(/\s+/);
            const mainKeyword = words.slice(0, 3).join(' ');
            
            // Simulated tag generation based on input
            const primary = [
                mainKeyword,
                words[0],
                input.toLowerCase(),
                words.slice(0, 2).join(' ')
            ].filter(tag => tag && tag.length > 2);

            const related = [
                `${words[0]} tutorial`,
                `${words[0]} guide`,
                `${words[0]} tips`,
                `how to ${words[0]}`,
                `${words[0]} explained`,
                `${words[0]} for beginners`,
                `${words[0]} step by step`,
                `${words[0]} review`
            ].filter(tag => tag.length > 0);

            const longtail = [
                `how to ${mainKeyword}`,
                `${mainKeyword} tutorial`,
                `${mainKeyword} for beginners`,
                `${mainKeyword} step by step guide`,
                `best ${mainKeyword}`,
                `${mainKeyword} tips and tricks`,
                `${mainKeyword} explained`,
                `complete ${mainKeyword} guide`
            ];

            const trending = [
                `${words[0]} 2025`,
                `${words[0]} trending`,
                `viral ${words[0]}`,
                `${words[0]} hack`,
                `${words[0]} secrets`,
                `${words[0]} pro tips`,
                `${words[0]} mastery`,
                `ultimate ${words[0]}`
            ];

            return { primary, related, longtail, trending };
        }

        function displayResults(tags) {
            displayTagCategory('primaryTags', tags.primary, 'primary');
            displayTagCategory('relatedTags', tags.related, 'related');
            displayTagCategory('longtailTags', tags.longtail, 'longtail');
            displayTagCategory('trendingTags', tags.trending, 'trending');
            
            updateStats(tags);
            updateAllTagsTextarea(tags);
        }

        function displayTagCategory(containerId, tags, category) {
            const container = document.getElementById(containerId);
            container.innerHTML = '';
            
            tags.forEach(tag => {
                const tagElement = document.createElement('span');
                tagElement.className = `tag-item inline-block bg-gray-100 hover:bg-gray-200 text-gray-800 px-3 py-2 rounded-full text-sm mr-2 mb-2 cursor-pointer transition-all duration-300`;
                tagElement.textContent = tag;
                tagElement.onclick = () => copyTag(tag, tagElement);
                container.appendChild(tagElement);
            });
        }

        function updateStats(tags) {
            const allTags = [...tags.primary, ...tags.related, ...tags.longtail, ...tags.trending];
            const totalTags = allTags.length;
            const allTagsString = allTags.join(', ');
            const characterCount = allTagsString.length;
            
            document.getElementById('totalTags').textContent = totalTags;
            document.getElementById('characterCount').textContent = characterCount;
            
            // Update character count color based on limit
            const charElement = document.getElementById('characterCount');
            if (characterCount > 500) {
                charElement.className = 'text-2xl font-bold text-red-600';
            } else if (characterCount > 400) {
                charElement.className = 'text-2xl font-bold text-yellow-600';
            } else {
                charElement.className = 'text-2xl font-bold text-green-600';
            }
        }

        function updateAllTagsTextarea(tags) {
            const allTags = [...tags.primary, ...tags.related, ...tags.longtail, ...tags.trending];
            const allTagsString = allTags.join(', ');
            document.getElementById('allTagsText').value = allTagsString;
        }

        function copyTag(tag, element) {
            navigator.clipboard.writeText(tag).then(() => {
                element.classList.add('copy-animation');
                element.style.backgroundColor = '#10B981';
                element.style.color = 'white';
                
                setTimeout(() => {
                    element.classList.remove('copy-animation');
                    element.style.backgroundColor = '';
                    element.style.color = '';
                }, 600);
            });
        }

        function copyTags(category) {
            const container = document.getElementById(`${category}Tags`);
            const tags = Array.from(container.children).map(el => el.textContent);
            const tagsString = tags.join(', ');
            
            navigator.clipboard.writeText(tagsString).then(() => {
                showCopyNotification(`${category.charAt(0).toUpperCase() + category.slice(1)} tags copied!`);
            });
        }

        function copyAllTags() {
            const textarea = document.getElementById('allTagsText');
            textarea.select();
            navigator.clipboard.writeText(textarea.value).then(() => {
                showCopyNotification('All tags copied to clipboard!');
            });
        }

        function showCopyNotification(message) {
            const notification = document.createElement('div');
            notification.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
            notification.innerHTML = `<i class="fas fa-check mr-2"></i>${message}`;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        // Enter key support for input
        document.getElementById('videoInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                generateTags();
            }
        });

        // Initialize domain references on page load
        document.addEventListener('DOMContentLoaded', updateDomainReferences);
    </script>
</body>
</html>
