        // Generate blog tags based on input
        function generateTags() {
            const input = document.getElementById('blogInput').value.trim();
            const category = document.getElementById('categorySelect').value;
            const audience = document.getElementById('audienceSelect').value;

            if (!input) {
                alert('Please enter your blog post title or description.');
                return;
            }

            // Show loading state
            const generateBtn = document.getElementById('generateBtn');
            const generateText = document.getElementById('generateText');
            const loadingSpinner = document.getElementById('loadingSpinner');
            
            generateBtn.disabled = true;
            generateText.textContent = 'Generating...';
            loadingSpinner.style.display = 'inline-block';

            // Simulate processing time
            setTimeout(() => {
                const tags = analyzeAndGenerateTags(input, category, audience);
                displayTags(tags);
                
                // Reset button state
                generateBtn.disabled = false;
                generateText.textContent = 'Generate Tags';
                loadingSpinner.style.display = 'none';
                
                // Show results
                document.getElementById('resultsSection').classList.remove('hidden');
                document.getElementById('resultsSection').scrollIntoView({ behavior: 'smooth' });
            }, 1500);
        }

        // Analyze input and generate relevant tags
        function analyzeAndGenerateTags(input, category, audience) {
            const inputLower = input.toLowerCase();
            const words = inputLower.split(/\s+/);
            
            // Get base tags from category
            let baseTags = category && tagDatabase[category] ? tagDatabase[category] : tagDatabase.business;
            
            // Keywords for different types of content
            const contentKeywords = {
                howTo: ['how to', 'guide', 'tutorial', 'step by step', 'learn', 'master'],
                tips: ['tips', 'advice', 'strategies', 'techniques', 'methods', 'ways'],
                review: ['review', 'comparison', 'vs', 'analysis', 'evaluation'],
                list: ['best', 'top', 'essential', 'important', 'must', 'list'],
                beginner: ['beginner', 'basics', 'introduction', 'getting started', 'fundamentals'],
                advanced: ['advanced', 'expert', 'professional', 'mastery', 'deep dive']
            };

            // Audience-specific tags
            const audienceTags = {
                beginners: ['beginner-friendly', 'getting-started', 'basics', 'fundamentals', 'introduction'],
                professionals: ['professional', 'advanced', 'expert-level', 'industry-insights', 'best-practices'],
                entrepreneurs: ['entrepreneurship', 'business-growth', 'startup-advice', 'leadership', 'innovation'],
                students: ['learning', 'education', 'study-tips', 'academic', 'skill-development'],
                parents: ['parenting', 'family', 'work-life-balance', 'time-management', 'organization'],
                seniors: ['senior-friendly', 'retirement', 'health-wellness', 'lifestyle', 'active-aging']
            };

            let selectedTags = {
                primary: [],
                secondary: [],
                niche: [],
                seo: []
            };

            // Primary tags - based on main topic and category
            selectedTags.primary = selectRelevantTags(baseTags.primary, inputLower, 3);

            // Secondary tags - supporting concepts
            selectedTags.secondary = selectRelevantTags(baseTags.secondary, inputLower, 3);

            // Niche tags - specific to content type and audience
            let nicheTags = [...baseTags.niche];
            if (audience && audienceTags[audience]) {
                nicheTags = [...nicheTags, ...audienceTags[audience]];
            }
            selectedTags.niche = selectRelevantTags(nicheTags, inputLower, 3);

            // SEO tags - content type specific
            let seoTags = [...baseTags.seo];
            
            // Add content-type specific SEO tags
            Object.keys(contentKeywords).forEach(type => {
                if (contentKeywords[type].some(keyword => inputLower.includes(keyword))) {
                    switch(type) {
                        case 'howTo':
                            seoTags.push('how-to-guide', 'step-by-step', 'tutorial');
                            break;
                        case 'tips':
                            seoTags.push('tips-and-tricks', 'advice', 'strategies');
                            break;
                        case 'review':
                            seoTags.push('review', 'comparison', 'analysis');
                            break;
                        case 'list':
                            seoTags.push('list', 'compilation', 'collection');
                            break;
                        case 'beginner':
                            seoTags.push('beginner-guide', 'basics', 'introduction');
                            break;
                        case 'advanced':
                            seoTags.push('advanced-guide', 'expert-tips', 'mastery');
                            break;
                    }
                }
            });

            selectedTags.seo = selectRelevantTags(seoTags, inputLower, 3);

            // Store all tags for copying
            allGeneratedTags = [
                ...selectedTags.primary,
                ...selectedTags.secondary,
                ...selectedTags.niche,
                ...selectedTags.seo
            ];

            return selectedTags;
        }

        // Select most relevant tags based on input content
        function selectRelevantTags(tagArray, input, count) {
            const scored = tagArray.map(tag => {
                let score = 0;
                const tagWords = tag.toLowerCase().replace(/-/g, ' ').split(' ');
                
                tagWords.forEach(word => {
                    if (input.includes(word)) {
                        score += 2; // Exact word match
                    } else if (input.includes(word.substring(0, 4))) {
                        score += 1; // Partial match
                    }
                });
                
                return { tag, score };
            });

            // Sort by score and return top tags
            return scored
                .sort((a, b) => b.score - a.score)
                .slice(0, count)
                .map(item => item.tag);
        }

        // Display generated tags
        function displayTags(tags) {
            const containers = {
                primary: document.getElementById('primaryTags'),
                secondary: document.getElementById('secondaryTags'),
                niche: document.getElementById('nicheTags'),
                seo: document.getElementById('seoTags')
            };

            Object.keys(containers).forEach(category => {
                const container = containers[category];
                container.innerHTML = '';
                
                tags[category].forEach(tag => {
                    const tagElement = document.createElement('span');
                    tagElement.className = 'tag-item';
                    tagElement.textContent = tag;
                    tagElement.onclick = () => copyTag(tag);
                    tagElement.title = 'Click to copy';
                    container.appendChild(tagElement);
                });
            });
        }

        // Copy individual tag
        function copyTag(tag) {
            navigator.clipboard.writeText(tag).then(() => {
                showNotification(`Tag "${tag}" copied to clipboard!`);
            });
        }

        // Copy all generated tags
        function copyAllTags() {
            const tagsText = allGeneratedTags.join(', ');
            navigator.clipboard.writeText(tagsText).then(() => {
                showNotification('All tags copied to clipboard!');
            });
        }

        // Show notification
        function showNotification(message) {
            const notification = document.createElement('div');
            notification.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        // Initialize domain references on page load
        document.addEventListener('DOMContentLoaded', updateDomainReferences);

        // Enter key support for input
        document.getElementById('blogInput').addEventListener('keypress', function(event) {
            if (event.key === 'Enter' && event.ctrlKey) {
                generateTags();
            }
        });
    </script>
</body>
</html>
