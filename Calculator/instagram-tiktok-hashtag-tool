    <script>
        // Global variables
        let selectedPlatform = 'instagram';
        let generatedHashtags = {
            trending: [],
            popular: [],
            niche: []
        };

        // Hashtag databases
        const hashtagDatabase = {
            instagram: {
                trending: ['#trending', '#viral', '#reels', '#explore', '#fyp', '#instadaily', '#love', '#photooftheday', '#instagood', '#beautiful'],
                popular: ['#photography', '#art', '#nature', '#travel', '#lifestyle', '#fashion', '#food', '#fitness', '#music', '#inspiration'],
                niche: ['#smallbusiness', '#entrepreneur', '#mindfulness', '#sustainability', '#creativity', '#community', '#growth', '#learning', '#adventure', '#authentic']
            },
            tiktok: {
                trending: ['#fyp', '#foryou', '#viral', '#trending', '#foryoupage', '#tiktok', '#xyzbca', '#fypã‚·', '#viralvideo', '#trend'],
                popular: ['#dance', '#comedy', '#music', '#diy', '#cooking', '#fashion', '#beauty', '#travel', '#pets', '#fitness'],
                niche: ['#smallbiz', '#entrepreneur', '#learn', '#tips', '#hack', '#tutorial', '#storytime', '#dayinmylife', '#asmr', '#aesthetic']
            }
        };

        // Topic-specific hashtags
        const topicHashtags = {
            fashion: {
                trending: ['#fashionweek', '#ootd', '#style', '#trendy', '#fashionista', '#streetstyle', '#fashionblogger', '#styleinspiration', '#fashiontrends', '#outfit'],
                popular: ['#fashion', '#style', '#outfit', '#clothing', '#designer', '#vintage', '#shopping', '#model', '#fashionphotography', '#styleinspo'],
                niche: ['#sustainablefashion', '#thrifted', '#vintageoutfit', '#ethicalfashion', '#capsulewardrobe', '#fashionhaul', '#stylejourney', '#fashiondiary', '#outfitplanning', '#wardrobeessentials']
            },
            travel: {
                trending: ['#travel', '#wanderlust', '#explore', '#adventure', '#vacation', '#trip', '#travelblogger', '#travelgram', '#instatravel', '#travelling'],
                popular: ['#nature', '#beach', '#mountains', '#city', '#culture', '#photography', '#landscape', '#sunset', '#holiday', '#journey'],
                niche: ['#solotravel', '#backpacking', '#roadtrip', '#localhidden', '#offthebeatenpath', '#sustainabletravel', '#budgettravel', '#travelcouple', '#digitalnomad', '#hiddengems']
            },
            fitness: {
                trending: ['#fitness', '#workout', '#gym', '#fit', '#health', '#strong', '#motivation', '#fitnessmotivation', '#bodybuilding', '#training'],
                popular: ['#exercise', '#healthy', '#lifestyle', '#muscle', '#cardio', '#strength', '#yoga', '#running', '#nutrition', '#wellness'],
                niche: ['#homeworkout', '#bodyweight', '#functionaltraining', '#mindfulmovement', '#calisthenics', '#hiit', '#pilates', '#crosstraining', '#mobilitywork', '#strengthtraining']
            },
            food: {
                trending: ['#food', '#foodie', '#delicious', '#yummy', '#foodporn', '#instafood', '#cooking', '#recipe', '#foodblogger', '#tasty'],
                popular: ['#homemade', '#healthy', '#dinner', '#lunch', '#breakfast', '#dessert', '#baking', '#chef', '#kitchen', '#foodphotography'],
                niche: ['#plantbased', '#vegan', '#glutenfree', '#mealprep', '#comfortfood', '#farmtotable', '#localingredients', '#seasonalcooking', '#zerowaste', '#mindfulcooking']
            }
        };

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateDomainReferences();
            document.getElementById('keywordInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    generateHashtags();
                }
            });
        });

        // Update domain references
        function updateDomainReferences() {
            const currentDomain = window.location.hostname.replace('www.', '');
            const domainElements = ['header-logo', 'footer-logo', 'copyright-domain'];
            
            domainElements.forEach(id => {
                const element = document.getElementById(id);
                if (element) {
                    element.textContent = currentDomain || 'LearnForAll';
                }
            });
        }

        // Platform selection
        function selectPlatform(platform) {
            selectedPlatform = platform;
            
            // Update button styles
            document.querySelectorAll('[id$="Btn"]').forEach(btn => {
                btn.className = 'px-6 py-2 rounded-md text-gray-600 font-medium transition-all duration-300';
            });
            
            document.getElementById(platform + 'Btn').className = 'platform-toggle px-6 py-2 rounded-md text-white font-medium transition-all duration-300';
        }

        // Generate hashtags
        function generateHashtags() {
            const keyword = document.getElementById('keywordInput').value.trim().toLowerCase();
            
            if (!keyword) {
                alert('Please enter a keyword or topic');
                return;
            }

            // Show loading state
            document.getElementById('loadingState').classList.remove('hidden');
            document.getElementById('resultsSection').classList.add('hidden');

            // Simulate API call delay
            setTimeout(() => {
                const hashtags = generateHashtagsForKeyword(keyword);
                displayResults(hashtags);
                
                // Hide loading state
                document.getElementById('loadingState').classList.add('hidden');
                document.getElementById('resultsSection').classList.remove('hidden');
                
                // Scroll to results
                document.getElementById('resultsSection').scrollIntoView({ behavior: 'smooth' });
            }, 2000);
        }

        // Generate hashtags for keyword
        function generateHashtagsForKeyword(keyword) {
            let hashtags = {
                trending: [],
                popular: [],
                niche: []
            };

            // Check if keyword matches specific topics
            if (topicHashtags[keyword]) {
                hashtags = { ...topicHashtags[keyword] };
            } else {
                // Generate generic hashtags based on platform
                const platforms = selectedPlatform === 'both' ? ['instagram', 'tiktok'] : [selectedPlatform];
                
                platforms.forEach(platform => {
                    hashtags.trending = [...hashtags.trending, ...hashtagDatabase[platform].trending.slice(0, 5)];
                    hashtags.popular = [...hashtags.popular, ...hashtagDatabase[platform].popular.slice(0, 8)];
                    hashtags.niche = [...hashtags.niche, ...hashtagDatabase[platform].niche.slice(0, 7)];
                });

                // Add keyword-based hashtags
                hashtags.trending.unshift(`#${keyword}`, `#${keyword}trending`, `#${keyword}viral`);
                hashtags.popular.unshift(`#${keyword}love`, `#${keyword}community`, `#${keyword}inspiration`);
                hashtags.niche.unshift(`#${keyword}tips`, `#${keyword}tutorial`, `#${keyword}journey`);
            }

            // Remove duplicates and limit count
            hashtags.trending = [...new Set(hashtags.trending)].slice(0, 8);
            hashtags.popular = [...new Set(hashtags.popular)].slice(0, 12);
            hashtags.niche = [...new Set(hashtags.niche)].slice(0, 10);

            generatedHashtags = hashtags;
            return hashtags;
        }

        // Display results
        function displayResults(hashtags) {
            // Update counts
            document.getElementById('trendingCount').textContent = hashtags.trending.length;
            document.getElementById('popularCount').textContent = hashtags.popular.length;
            document.getElementById('nicheCount').textContent = hashtags.niche.length;
            document.getElementById('totalCount').textContent = hashtags.trending.length + hashtags.popular.length + hashtags.niche.length;

            // Display hashtags
            displayHashtagCategory('trending', hashtags.trending);
            displayHashtagCategory('popular', hashtags.popular);
            displayHashtagCategory('niche', hashtags.niche);
        }

        // Display hashtag category
        function displayHashtagCategory(category, hashtags) {
            const container = document.getElementById(category + 'Hashtags');
            container.innerHTML = '';

            hashtags.forEach(hashtag => {
                const tag = document.createElement('span');
                tag.className = 'hashtag-tag';
                tag.textContent = hashtag;
                tag.onclick = () => copyToClipboard(hashtag);
                container.appendChild(tag);
            });
        }

        // Copy functions
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                showCopyNotification(`"${text}" copied!`);
            });
        }

        function copyCategory(category) {
            const hashtags = generatedHashtags[category].join(' ');
            navigator.clipboard.writeText(hashtags).then(() => {
                showCopyNotification(`${category} hashtags copied!`);
            });
        }

        function copyAllHashtags() {
            const allHashtags = [
                ...generatedHashtags.trending,
                ...generatedHashtags.popular,
                ...generatedHashtags.niche
            ].join(' ');
            
            navigator.clipboard.writeText(allHashtags).then(() => {
                showCopyNotification('All hashtags copied!');
            });
        }

        // Show copy notification
        function showCopyNotification(message) {
            const notification = document.getElementById('copyNotification');
            notification.innerHTML = `<i class="fas fa-check-circle mr-2"></i>${message}`;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        // Navigation functions
        function toggleDropdown() {
            const dropdown = document.querySelector('.dropdown');
            dropdown.classList.toggle('active');
        }

        function toggleMobileMenu() {
            const mobileMenu = document.querySelector('.mobile-menu');
            mobileMenu.classList.toggle('active');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.querySelector('.dropdown');
            const toolsButton = event.target.closest('button');
            
            if (!toolsButton || !toolsButton.textContent.includes('Tools')) {
                dropdown.classList.remove('active');
            }
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>
