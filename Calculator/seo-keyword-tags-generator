    <script>
        // Keyword database for different topics
        const keywordDatabase = {
            "digital marketing": {
                primary: ["digital marketing", "online marketing", "internet marketing", "digital advertising", "marketing strategy"],
                longtail: ["digital marketing strategies for small business", "best digital marketing tools 2025", "how to start digital marketing agency", "digital marketing course online free", "digital marketing vs traditional marketing"],
                lsi: ["SEO", "social media", "content marketing", "email marketing", "PPC", "analytics", "conversion rate", "brand awareness", "lead generation", "marketing automation"],
                questions: ["What is digital marketing?", "How to learn digital marketing?", "Why is digital marketing important?", "Which digital marketing course is best?", "How much does digital marketing cost?"]
            },
            "healthy recipes": {
                primary: ["healthy recipes", "nutritious meals", "healthy cooking", "diet recipes", "wellness food"],
                longtail: ["easy healthy recipes for weight loss", "healthy recipes for busy families", "quick healthy breakfast recipes", "low carb healthy dinner recipes", "healthy meal prep recipes"],
                lsi: ["nutrition", "calories", "protein", "vegetables", "whole grains", "meal planning", "cooking tips", "ingredients", "dietary", "vitamins"],
                questions: ["What are some healthy recipes?", "How to cook healthy meals?", "What makes a recipe healthy?", "How to meal prep healthy foods?", "What are easy healthy recipes?"]
            },
            "home renovation": {
                primary: ["home renovation", "house remodeling", "home improvement", "interior design", "home makeover"],
                longtail: ["home renovation ideas on a budget", "DIY home renovation projects", "small home renovation tips", "home renovation cost calculator", "modern home renovation designs"],
                lsi: ["contractor", "budget", "planning", "permits", "materials", "design", "construction", "flooring", "kitchen", "bathroom"],
                questions: ["How to plan home renovation?", "What is the cost of home renovation?", "How to renovate home on budget?", "Which home renovation adds most value?", "How long does home renovation take?"]
            }
        };

        // Get current domain and update all domain references
        function updateDomainReferences() {
            const currentDomain = window.location.hostname.replace('www.', '') || 'Tolzo.site';
            const domainElements = ['header-logo', 'footer-logo', 'copyright-domain'];
            
            domainElements.forEach(id => {
                const element = document.getElementById(id);
                if (element) {
                    element.textContent = currentDomain;
                }
            });
        }

        // Toggle dropdown menu
        function toggleDropdown() {
            const dropdown = document.querySelector('.dropdown');
            dropdown.classList.toggle('active');
        }

        // Toggle mobile menu
        function toggleMobileMenu() {
            const mobileMenu = document.querySelector('.mobile-menu');
            mobileMenu.classList.toggle('active');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.querySelector('.dropdown');
            const toolsButton = event.target.closest('button');
            
            if (!toolsButton || !toolsButton.textContent.includes('Tools')) {
                dropdown.classList.remove('active');
            }
        });

        // Generate keywords based on input
        function generateKeywords() {
            const topic = document.getElementById('topicInput').value.trim().toLowerCase();
            
            if (!topic) {
                alert('Please enter a topic or keyword to generate suggestions.');
                return;
            }

            // Show loading state
            document.getElementById('loadingState').classList.remove('hidden');
            document.getElementById('resultsSection').classList.add('hidden');
            document.getElementById('generateBtn').disabled = true;

            // Simulate API call delay
            setTimeout(() => {
                const keywords = getKeywordsForTopic(topic);
                displayResults(keywords, topic);
                
                // Hide loading state
                document.getElementById('loadingState').classList.add('hidden');
                document.getElementById('resultsSection').classList.remove('hidden');
                document.getElementById('generateBtn').disabled = false;
            }, 2000);
        }

        // Get keywords for a specific topic
        function getKeywordsForTopic(topic) {
            // Check if we have exact match in database
            if (keywordDatabase[topic]) {
                return keywordDatabase[topic];
            }

            // Generate keywords based on topic
            const baseKeywords = {
                primary: [
                    topic,
                    `${topic} guide`,
                    `best ${topic}`,
                    `${topic} tips`,
                    `${topic} strategy`
                ],
                longtail: [
                    `how to ${topic} for beginners`,
                    `${topic} step by step guide`,
                    `best ${topic} practices 2025`,
                    `${topic} tools and resources`,
                    `professional ${topic} services`,
                    `${topic} course online`,
                    `${topic} examples and case studies`
                ],
                lsi: generateLSIKeywords(topic),
                questions: [
                    `What is ${topic}?`,
                    `How to start with ${topic}?`,
                    `Why is ${topic} important?`,
                    `What are the benefits of ${topic}?`,
                    `How much does ${topic} cost?`,
                    `Where to learn ${topic}?`
                ]
            };

            return baseKeywords;
        }

        // Generate LSI keywords based on topic
        function generateLSIKeywords(topic) {
            const commonLSI = ['guide', 'tips', 'best', 'how to', 'examples', 'tools', 'resources', 'strategy', 'techniques', 'methods'];
            const topicWords = topic.split(' ');
            const lsiKeywords = [];

            // Add common LSI terms
            commonLSI.forEach(term => {
                lsiKeywords.push(term);
            });

            // Add variations of the topic
            topicWords.forEach(word => {
                lsiKeywords.push(`${word} basics`);
                lsiKeywords.push(`${word} advanced`);
                lsiKeywords.push(`${word} tutorial`);
            });

            return lsiKeywords.slice(0, 10); // Return first 10
        }

        // Display generated keywords
        function displayResults(keywords, topic) {
            displayKeywordCategory('primaryKeywords', keywords.primary, 'primary');
            displayKeywordCategory('longtailKeywords', keywords.longtail, 'longtail');
            displayKeywordCategory('lsiKeywords', keywords.lsi, 'lsi');
            displayKeywordCategory('questionKeywords', keywords.questions, 'question');
        }

        // Display keywords in a specific category
        function displayKeywordCategory(containerId, keywords, type) {
            const container = document.getElementById(containerId);
            container.innerHTML = '';

            keywords.forEach((keyword, index) => {
                const keywordElement = createKeywordElement(keyword, type, index);
                container.appendChild(keywordElement);
            });
        }

        // Create individual keyword element
        function createKeywordElement(keyword, type, index) {
            const div = document.createElement('div');
            div.className = 'keyword-tag p-3 rounded-lg flex items-center justify-between group';
            
            const difficulty = ['easy', 'medium', 'hard'][Math.floor(Math.random() * 3)];
            const volume = ['high', 'medium', 'low'][Math.floor(Math.random() * 3)];
            
            div.innerHTML = `
                <div class="flex-1">
                    <span class="font-medium">${keyword}</span>
                    <div class="flex items-center mt-1 space-x-2 text-xs">
                        <span class="difficulty-${difficulty}">
                            <i class="fas fa-circle mr-1"></i>
                            ${difficulty.charAt(0).toUpperCase() + difficulty.slice(1)} difficulty
                        </span>
                        <span class="search-volume-${volume}">
                            <i class="fas fa-chart-bar mr-1"></i>
                            ${volume.charAt(0).toUpperCase() + volume.slice(1)} volume
                        </span>
                    </div>
                </div>
                <div class="opacity-0 group-hover:opacity-100 transition-opacity">
                    <i class="fas fa-copy text-gray-500"></i>
                </div>
            `;
            
            div.addEventListener('click', () => {
                copyToClipboard(keyword, div);
            });
            
            return div;
        }

        // Copy keyword to clipboard
        function copyToClipboard(text, element) {
            navigator.clipboard.writeText(text).then(() => {
                // Visual feedback
                element.classList.add('copied');
                const icon = element.querySelector('i');
                icon.className = 'fas fa-check text-white';
                
                // Reset after 2 seconds
                setTimeout(() => {
                    element.classList.remove('copied');
                    icon.className = 'fas fa-copy text-gray-500';
                }, 2000);
            }).catch(() => {
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                
                // Visual feedback
                element.classList.add('copied');
                setTimeout(() => {
                    element.classList.remove('copied');
                }, 2000);
            });
        }

        // Copy all keywords
        function copyAllKeywords() {
            const allKeywords = [];
            
            // Collect all keywords from all categories
            document.querySelectorAll('.keyword-tag span.font-medium').forEach(element => {
                allKeywords.push(element.textContent);
            });
            
            const keywordText = allKeywords.join(', ');
            
            navigator.clipboard.writeText(keywordText).then(() => {
                alert('All keywords copied to clipboard!');
            }).catch(() => {
                // Fallback
                const textArea = document.createElement('textarea');
                textArea.value = keywordText;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                alert('All keywords copied to clipboard!');
            });
        }

        // Download keywords as TXT file
        function downloadKeywords() {
            const topic = document.getElementById('topicInput').value.trim();
            const allKeywords = [];
            
            // Collect keywords by category
            const categories = [
                { name: 'Primary Keywords', id: 'primaryKeywords' },
                { name: 'Long-tail Keywords', id: 'longtailKeywords' },
                { name: 'LSI Keywords', id: 'lsiKeywords' },
                { name: 'Question Keywords', id: 'questionKeywords' }
            ];
            
            let content = `SEO Keywords for: ${topic}\n`;
            content += `Generated on: ${new Date().toLocaleDateString()}\n`;
            content += `=================================\n\n`;
            
            categories.forEach(category => {
                const container = document.getElementById(category.id);
                const keywords = Array.from(container.querySelectorAll('.keyword-tag span.font-medium')).map(el => el.textContent);
                
                if (keywords.length > 0) {
                    content += `${category.name}:\n`;
                    keywords.forEach(keyword => {
                        content += `- ${keyword}\n`;
                    });
                    content += '\n';
                }
            });
            
            // Create and download file
            const blob = new Blob([content], { type: 'text/plain' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `seo-keywords-${topic.replace(/\s+/g, '-')}.txt`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
        }

        // Clear results
        function clearResults() {
            document.getElementById('resultsSection').classList.add('hidden');
            document.getElementById('topicInput').value = '';
            document.getElementById('topicInput').focus();
        }

        // Allow Enter key to generate keywords
        document.getElementById('topicInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                generateKeywords();
            }
        });

        // Initialize domain references on page load
        document.addEventListener('DOMContentLoaded', updateDomainReferences);
    </script>
</body>
</html>
