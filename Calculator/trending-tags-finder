    <script>
        // Trending tags data
        const trendingTagsData = {
            hot: [
                { tag: '#summervibes2025', platforms: ['instagram', 'tiktok'], engagement: 'high' },
                { tag: '#wanderlust', platforms: ['instagram', 'youtube'], engagement: 'high' },
                { tag: '#foodie', platforms: ['instagram', 'tiktok'], engagement: 'high' },
                { tag: '#selfcare', platforms: ['instagram', 'twitter'], engagement: 'high' },
                { tag: '#fitnessmotivation', platforms: ['instagram', 'youtube'], engagement: 'high' },
                { tag: '#reelitfeelit', platforms: ['instagram'], engagement: 'viral' },
                { tag: '#photooftheday', platforms: ['instagram'], engagement: 'high' }
            ],
            rising: [
                { tag: '#sustainablefashion', platforms: ['instagram', 'tiktok'], engagement: 'rising' },
                { tag: '#mentalhealthawareness', platforms: ['twitter', 'instagram'], engagement: 'rising' },
                { tag: '#plantbased', platforms: ['instagram', 'youtube'], engagement: 'rising' },
                { tag: '#workfromhome', platforms: ['twitter', 'youtube'], engagement: 'rising' },
                { tag: '#smallbusiness', platforms: ['instagram', 'twitter'], engagement: 'rising' },
                { tag: '#booktok', platforms: ['tiktok'], engagement: 'rising' },
                { tag: '#cleantok', platforms: ['tiktok'], engagement: 'rising' }
            ],
            popular: [
                { tag: '#fashion', platforms: ['instagram', 'youtube'], engagement: 'steady' },
                { tag: '#travel', platforms: ['instagram', 'youtube'], engagement: 'steady' },
                { tag: '#food', platforms: ['instagram', 'tiktok'], engagement: 'steady' },
                { tag: '#fitness', platforms: ['instagram', 'youtube'], engagement: 'steady' },
                { tag: '#beauty', platforms: ['instagram', 'tiktok'], engagement: 'steady' },
                { tag: '#photography', platforms: ['instagram'], engagement: 'steady' },
                { tag: '#nature', platforms: ['instagram', 'youtube'], engagement: 'steady' },
                { tag: '#art', platforms: ['instagram', 'tiktok'], engagement: 'steady' }
            ]
        };

        let currentPlatform = 'all';

        function updateDomainReferences() {
            const currentDomain = window.location.hostname.replace('www.', '');
            const domainElements = ['header-logo', 'footer-logo', 'copyright-domain'];
            
            domainElements.forEach(id => {
                const element = document.getElementById(id);
                if (element) {
                    element.textContent = currentDomain || 'LearnForAll';
                }
            });
        }

        function toggleDropdown() {
            const dropdown = document.querySelector('.dropdown');
            dropdown.classList.toggle('active');
        }

        function toggleMobileMenu() {
            const mobileMenu = document.querySelector('.mobile-menu');
            mobileMenu.classList.toggle('active');
        }

        function filterPlatform(platform) {
            currentPlatform = platform;
            
            // Update active tab
            document.querySelectorAll('.platform-tab').forEach(tab => {
                tab.classList.remove('active');
                tab.classList.add('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
            });
            
            event.target.classList.add('active');
            event.target.classList.remove('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
            
            renderTags();
        }

        function renderTags() {
            const categories = ['hot', 'rising', 'popular'];
            const containerIds = ['hot-tags', 'rising-tags', 'popular-tags'];
            
            categories.forEach((category, index) => {
                const container = document.getElementById(containerIds[index]);
                container.innerHTML = '';
                
                let filteredTags = trendingTagsData[category];
                
                if (currentPlatform !== 'all') {
                    filteredTags = filteredTags.filter(item => 
                        item.platforms.includes(currentPlatform)
                    );
                }
                
                filteredTags.forEach(item => {
                    const tagElement = createTagElement(item);
                    container.appendChild(tagElement);
                });
                
                if (filteredTags.length === 0) {
                    container.innerHTML = '<p class="text-gray-500 text-sm">No trending tags for this platform</p>';
                }
            });
        }

        function createTagElement(item) {
            const div = document.createElement('div');
            div.className = 'tag-item bg-gray-100 hover:bg-gray-200 rounded-lg p-3 flex justify-between items-center fade-in';
            
            const platformIcons = {
                instagram: 'üì∑',
                twitter: 'üê¶',
                tiktok: 'üéµ',
                youtube: 'üì∫'
            };
            
            const platformIconsHtml = item.platforms.map(platform => 
                `<span title="${platform}" class="text-sm">${platformIcons[platform] || 'üåê'}</span>`
            ).join(' ');
            
            div.innerHTML = `
                <div class="flex-1">
                    <span class="font-medium text-gray-800">${item.tag}</span>
                    <div class="flex items-center mt-1 space-x-1">
                        ${platformIconsHtml}
                    </div>
                </div>
                <button onclick="copyTag('${item.tag}')" class="text-blue-600 hover:text-blue-700 text-sm font-medium">
                    Copy
                </button>
            `;
            
            return div;
        }

        function copyTag(tag) {
            navigator.clipboard.writeText(tag).then(() => {
                // Show success feedback
                const notification = document.createElement('div');
                notification.className = 'fixed top-20 right-4 bg-green-500 text-white px-4 py-2 rounded-lg shadow-lg z-50';
                notification.textContent = `Copied: ${tag}`;
                document.body.appendChild(notification);
                
                setTimeout(() => {
                    notification.remove();
                }, 2000);
            });
        }

        function refreshTags() {
            const refreshIcon = document.getElementById('refresh-icon');
            const lastUpdated = document.getElementById('last-updated');
            
            refreshIcon.classList.add('refresh-animation');
            
            // Simulate refresh delay
            setTimeout(() => {
                refreshIcon.classList.remove('refresh-animation');
                lastUpdated.textContent = 'just now';
                
                // Add fade-in animation to all tags
                document.querySelectorAll('.tag-item').forEach(tag => {
                    tag.classList.add('fade-in');
                });
                
                // Shuffle some tags to simulate real updates
                shuffleTags();
            }, 1500);
        }

        function shuffleTags() {
            // Shuffle arrays to simulate new trending data
            Object.keys(trendingTagsData).forEach(category => {
                trendingTagsData[category] = shuffleArray(trendingTagsData[category]);
            });
            renderTags();
        }

        function shuffleArray(array) {
            const newArray = [...array];
            for (let i = newArray.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [newArray[i], newArray[j]] = [newArray[j], newArray[i]];
            }
            return newArray;
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.querySelector('.dropdown');
            const toolsButton = event.target.closest('button');
            
            if (!toolsButton || !toolsButton.textContent.includes('Tools')) {
                dropdown.classList.remove('active');
            }
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Update last updated time periodically
        setInterval(() => {
            const lastUpdated = document.getElementById('last-updated');
            const minutes = Math.floor(Math.random() * 10) + 1;
            lastUpdated.textContent = `${minutes} minutes ago`;
        }, 60000); // Update every minute

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateDomainReferences();
            renderTags();
        });
    </script>
</body>
