# Deny access to .htaccess files
# This prevents unauthorized users from viewing the contents
# of your .htaccess file from their browser.
<Files ".ht*">
  Require all denied
</Files>

# Enable URL rewriting
RewriteEngine On

# 404 Error Page
# Redirects users to your custom 404.html page if a file is not found.
ErrorDocument 404 /404.html

# Clean URLs
# This rule removes the .html extension from your URLs.
# For example, a request for /about becomes /about.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^\.]+)$ $1.html [NC,L]
